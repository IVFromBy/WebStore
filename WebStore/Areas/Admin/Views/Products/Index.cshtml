@model IEnumerable<Product>

@{ 
    ViewData["Title"] = "Products";
}

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>@Html.DisplayNameFor(product => product.Id)</th>
            <th>@Html.DisplayNameFor(product => product.Name)</th>
            <th>@Html.DisplayNameFor(product => product.Brand)</th>
            <th>@Html.DisplayNameFor(product => product.Section)</th>
            <th>@Html.DisplayNameFor(product => product.ImageUrl)</th>
            <th>@Html.DisplayNameFor(product => product.Price)</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var p in Model)
        {
        <tr>
            <td>
                <a asp-controller="Products" asp-action="Edit" asp-route-id="@p.Id">
                    <i class="glyphicon glyphicon-edit">редакт</i>
                </a>
            </td>
            <th>@Html.DisplayFor(m => p.Id)</th>
            <th>@Html.DisplayFor(m => p.Name)</th>
            <th>@Html.DisplayFor(m => p.Brand.Name)</th>
            <th>@Html.DisplayFor(m => p.Section.Name)</th>
            <th><img src="~/images/home/@p.ImageUrl" width="50" alt="@p.Name"/></th>
            <th>@Html.DisplayFor(m => p.Price)</th>
            <th>
                <a asp-controller="Products" asp-action="Delete" asp-route-id="@p.Id" class="text-danger">
                    <i class="glyphicon glyphicon-remove">del</i>
                </a>
            </th>

        </tr>
        }
    </tbody>
</table>