@model IEnumerable<UserOrderViewModel>

@{
    Layout = "_UserProfileLayout";
    ViewData["Title"] = "Заказы пользователя";
}

<table class="table">
    <thead>
        <tr>
            <th>№</th>
            <th>Имя</th>
            <th>Адрес</th>
            <th>телефон</th>
            <th>Сумма</th>
        </tr>
    </thead>
    <tbody>
        @{ var i = 1;}
        @foreach(var order in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>@order.Name</td>
                <td>@order.Address</td>
                <td>@order.Phone</td>
                <td>@order.TotalPrice.ToString()</td>
            </tr>
        }

    </tbody>
</table>